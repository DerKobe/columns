= simple_form_for(@column, :html => {:class => 'form-horizontal' }) do |f|
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .title New Column

  .container.first
    .span12
      - if flash[:warning]
        .alert.alert-warning
          = flash[:warning]
      = f.input :title, input_html: { class: "span8" }, placeholder: 'MyColumn', label: 'Title'

  .navbar.navbar-fixed-bottom.second
    .navbar-inner
      %input{ type: 'submit', class: 'btn btn-primary', value: 'Save' }
      %a{ href: '/', class: 'btn btn-danger'} Cancel
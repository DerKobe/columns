.navbar.navbar-fixed-bottom.navbar-inverse
  .navbar-inner
    %a.brand{ href: root_path }
      Columns
    %ul.nav

      %li.divider-vertical{ class: separator_needed?(['Dashboard']) }

      %li{ class: is_nav_item_active?('Dashboard') }
        %a{ href: root_path }
          %i.icon-th
          Dashboard

      %li.divider-vertical{ class: separator_needed?(['Dashboard','Shortcut']) }

      %li{ class: is_nav_item_active?('Shortcut') }
        %a{ href: "#" }
          %i.icon-plus
          Shortcut

      %li.divider-vertical{ class: separator_needed?(['Shortcut','Column']) }

      %li{ class: is_nav_item_active?('Column') }
        = link_to new_column_path do
          %i.icon-plus
          Column

      %li.divider-vertical{ class: separator_needed?(['Column']) }

    %ul.nav.pull-right
      %li
        =link_to edit_user_registration_path(current_user) do
          %i.icon-user
          = current_user.email
